<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Class="RoboScout.ArticlesListPage" xmlns:artina="clr-namespace:UXDivers.Artina.Shared;assembly=UXDivers.Artina.Shared" xmlns:local="clr-namespace:RoboScout;assembly=RoboScout"
	Title="{ artina:Translate PageTitleArticleList }">

	<ListView
		SeparatorVisibility="None"
		SeparatorColor="{ DynamicResource ListViewSeparatorColor }"
		ItemsSource="{Binding PostsList}"
		RowHeight="240"
		ItemTapped="OnItemTapped"
		HasUnevenRows="false">
		<ListView.ItemTemplate>
			<DataTemplate>
				<ViewCell>
					<local:ArticleItemTemplate />
				</ViewCell>
			</DataTemplate>
		</ListView.ItemTemplate>
	</ListView>

</ContentPage>

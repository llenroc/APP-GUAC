<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:local="clr-namespace:RoboScout;assembly=RoboScout"
	x:Class="RoboScout.SocialGalleryImagePreviewPage">

	<Grid
		BackgroundColor="#000000">

		<Image
			x:Name="img"
			Source="{ Binding source }"
			HorizontalOptions="FillAndExpand"
			VerticalOptions="FillAndExpand" />

		<!--CLOSE ICON-->
		<AbsoluteLayout
			HorizontalOptions="End"
			AbsoluteLayout.LayoutBounds="0,0,30,30">
			
			<Label
				FontSize="30"
				Text="{ x:Static local:GrialShapesFont.Close }"
				VerticalOptions="Start"
				TextColor="{ DynamicResource OverImageTextColor }"
				HeightRequest="30"
				WidthRequest="30"
				Margin="20"
				Style="{ StaticResource FontIcon }">
				
				<Label.GestureRecognizers>
					<TapGestureRecognizer
						Tapped="OnCloseButtonClicked" />
				</Label.GestureRecognizers>
			
			</Label>
			
		</AbsoluteLayout>
		
	</Grid>

</ContentPage>